<%= javascript_tag do %>
  window.current_user = <%= current_user.to_json.html_safe %>;
<% end %>

<%= javascript_include_tag :application %>

<%= yield :javascript %>

<%= render "analytics" %>


<% if Rails.env.test? %>
  <%= javascript_tag do %>
    $.fx.off = true;
    $.ajaxSetup({ async: false });
  <% end %>
<% end %>
