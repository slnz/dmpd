<nav class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header pull-right">
      <a class="navbar-brand" href="#">DMPD</a>
    </div>
    <div id="dmpd-navbar" ng-controller="TopbarController">
      <div class="call-session" ng-show="callSession.start_time">
        <a ui-sref="call_session">Call session started <span am-time-ago="callSession.start_time" am-preprocess="unix"></span></a>
        <a class="closetab" ng-click="endSession()" href="#">
          <i class="fa fa-times"></i>
        </a>
      </div>
      <div class="nav-container" ng-class="{expanded: !callSession.start_time}">
        <ul class="nav navbar-nav topbar">
          <li ui-sref-active="active">
            <a class="contact new" ui-sref="contacts.new">
              <i class="fa fa-plus"></i>
              <i class="fa fa-user"></i>
            </a>
          </li>
          <li ui-sref-active="active" ng-repeat="contact in contacts">
            <a class="closetab" ng-click="closeTab(contact.id)">
              <i class="fa fa-times"></i>
            </a>
            <a class="contact" ui-sref="contacts.show({contactId: contact.id})">
              <i class="fa fa-user"></i>
              {{contact.first_name}} {{contact.last_name}}
            </a>
          </li>
        </ul>
      </div>
      <ul class="nav navbar-nav navbar-right">
      </ul>
    </div>
  </div>
</nav>